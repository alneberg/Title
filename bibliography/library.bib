doi = {10.1038/ismej.2010.180},
file = {:Users/johannesalneberg/Library/Application Support/Mendeley Desktop/Downloaded/Weber et al. - 2011 - Practical application of self-organizing maps to interrelate biodiversity and functional data in NGS-based metagen.pdf:pdf},
