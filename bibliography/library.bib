issn = {1932-6203},
journal = {PloS one},
month = {jan},
number = {2},
pages = {e31386},
pmid = {22384016},
title = {{Assessment of metagenomic assembly using simulated next generation sequencing data.}},
url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=3285633{\&}tool=pmcentrez{\&}rendertype=abstract},
volume = {7},
year = {2012}
}
@article{Fan2000,
