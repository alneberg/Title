isbn = {1553-7358 (Electronic) 1553-734X (Linking)},
issn = {15537358},
journal = {PLoS Computational Biology},
number = {4},
pmid = {24699258},
title = {{Waste Not, Want Not: Why Rarefying Microbiome Data Is Inadmissible}},
volume = {10},
year = {2014}
}
